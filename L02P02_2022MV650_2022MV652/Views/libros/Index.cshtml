@{
}
@model List<L02P02_2022VF650_2022MV652.Models.libros>

<h2>Listado General de Libros</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Autor (ID)</th>
            <th>Precio</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var libro in Model)
        {
            <tr>
                <td>@libro.nombre</td>
                <td>@libro.id_autor</td>
                <td>$@libro.precio</td>
                <td>@libro.estado</td>
                <td>
                    <a asp-action="Detalle" asp-route-id="@libro.id" class="btn btn-info btn-sm">Ver comentario</a>
                </td>
            </tr>
        }
    </tbody>
</table>
