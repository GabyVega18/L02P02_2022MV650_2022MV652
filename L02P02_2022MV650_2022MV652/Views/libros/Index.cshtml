@{
}


@model IEnumerable<libros> <!-- Este es el modelo que recibimos con la lista de libros -->

<h2>Libros del Autor</h2>

<table class="table">
    <thead>
        <tr>
            <th>Título</th>
            <th>Acción</th> <!-- Columna para acciones adicionales -->
        </tr>
    </thead>
    <tbody>
        @foreach (var libro in Model)
        {
            <tr>
                <td>@libro.titulo</td> <!-- Título del libro -->
                <td>
                    <!-- Aquí puedes agregar más botones o acciones si lo deseas -->
                    <button class="btn btn-info">Ver Detalles</button> <!-- Botón para detalles del libro -->
                </td>
            </tr>
        }
    </tbody>
</table>

