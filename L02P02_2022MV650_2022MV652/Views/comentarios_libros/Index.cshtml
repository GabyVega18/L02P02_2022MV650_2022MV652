@model List<L02P02_2022VF650_2022MV652.Models.comentarios_libros>

<h2>Comentarios del Libro</h2>

@if (Model.Count > 0)
{
    <ul>
        @foreach (var comentario in Model)
        {
            <li><strong>@comentario.usuario</strong>: @comentario.comentarios</li>
        }
    </ul>
}
else
{
    <p>No hay comentarios para este libro.</p>
}

<!-- Formulario para agregar un comentario -->
<h3>Agregar Comentario</h3>
<form method="post" action="@Url.Action("GuardarComentario", "comentarios_libros")">
    <div class="form-group">
        <label for="comentario">Comentario</label>
        <textarea class="form-control" id="comentario" name="comentario" required></textarea>
    </div>

    <div class="form-group">
        <label for="usuario">Usuario</label>
        <input class="form-control" type="text" id="usuario" name="usuario" required />
    </div>

    <input type="hidden" name="id_libro" value="@ViewBag.IdLibro" />

    <button type="submit" class="btn btn-primary">Guardar Comentario</button>
</form>
