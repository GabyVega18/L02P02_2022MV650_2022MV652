@{
}
@model List<L02P02_2022VF650_2022MV652.Models.autores>

<h2>Listado de Autores</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Autor</th>
            <th>Acción</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var autor in Model)
        {
            <tr>
                <td>@autor.autor</td>
                <td>
                    <a asp-action="LibrosPorAutor" asp-route-id="@autor.id" class="btn btn-primary">Seleccionar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
